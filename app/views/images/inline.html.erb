<script>
function leftArrowPressed() {
    window.open('<%= images_inline_path(path: @next_path) %>','_self');
}

function upArrowPressed() {
  window.open('<%= images_find_duplicate_path(path: @current_path.to_s) %>','_self');
}

function rightArrowPressed() {
    window.open('<%= images_inline_path(path: @previous_path) %>','_self');
}

document.onkeydown = function(evt) {
  evt = evt || window.event;
  switch (evt.keyCode) {
    case 37:
      leftArrowPressed();
      break;
    case 38:
      upArrowPressed();
      break;
    case 39:
      rightArrowPressed();
      break;
  }
};
</script>

<%= image_tag custom_image_path( path: @current_path.to_s), class: "full-size-image" %>
