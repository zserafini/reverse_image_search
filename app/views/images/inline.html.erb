<script>
function rightArrowPressed() {
  window.open('<%= images_inline_path(path: @image.next_image) %>','_self');
}

function upArrowPressed() {
  window.open('<%= images_find_duplicate_path(path: @image.path) %>','_self');
}

function leftArrowPressed() {
  window.open('<%= images_inline_path(path: @image.previous_image) %>','_self');
}

document.onkeydown = function(evt) {
  evt = evt || window.event;
  switch (evt.keyCode) {
    case 37:
      leftArrowPressed();
      break;
    case 38:
      upArrowPressed();
      break;
    case 39:
      rightArrowPressed();
      break;
  }
};
</script>

<%= image_tag custom_image_path( path: @image.path), class: "full-size-image" %>
