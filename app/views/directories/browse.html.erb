<div class="list-group">
  <% @directory.sub_directories.each do |sub_directory| %>
    <a href='<%= directories_browse_path(path: File.join(@current_path, sub_directory)) %>' class="list-group-item">
      <button class="btn btn-primary"><i class="fa fa-folder"></i></button>
      <%= sub_directory %>
    </a>
  <% end %>
  
  <% @directory.images.each do |image| %>
    <a href='<%= images_find_duplicate_path(path: image.path) %>' class="list-group-item">
      <%= image_tag custom_image_path( path: image.path), height: 100 %>
      <%= image.name %>
      <% if image.duplicates.any? %>
        <span class="label label-danger"><i class="fa fa-files-o"></i></span>
      <% end %>
    </a>
  <% end %>
</div>
